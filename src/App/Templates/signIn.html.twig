{% extends 'base.html.twig' %}

{% block title %}Connexion / Raph'z Developer{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">

                <form method="POST" action="/sign-in">
                    <div class="mb-3">
                        <label for="signInForm_emailAddress" class="form-label">Adresse e-mail</label>
                        <input type="email"
                               class="form-control{% if signInFormErrors.emailAddress is defined %} is-invalid{% endif %}"
                               id="signInForm_emailAddress" name="signInForm[emailAddress]"
                               value="{% if signInForm.emailAddress is defined %}{{ signInForm.emailAddress }}{% endif %}"
                               required>
                        {% if signInFormErrors.emailAddress is defined %}
                            <div class="invalid-feedback">{{ signInFormErrors.emailAddress }}</div>
                        {% endif %}
                    </div>
                    <div class="mb-3">
                        <label for="signInForm_plainPassword" class="form-label">Mot de passe</label>
                        <input type="password"
                               class="form-control{% if signInFormErrors.plainPassword is defined %} is-invalid{% endif %}"
                               id="signInForm_plainPassword" name="signInForm[plainPassword]" required>
                        {% if signInFormErrors.plainPassword is defined %}
                            <div class="invalid-feedback">{{ signInFormErrors.plainPassword }}</div>
                        {% endif %}
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Connexion</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
{% endblock %}
